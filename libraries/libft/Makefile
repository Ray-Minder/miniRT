NAME = libft.a

FLAGS = -Wall -Wextra -Werror
DEBUG = -fsanitize=address -fsanitize=leak -g

INCLUDE_DIR = ./include
HEADER = $(INCLUDE_DIR)/libft.h

SRC_DIR = src
SRC = $(addprefix $(SRC_DIR)/, $(ASCII) $(CONVERT) $(FREE) $(GNL) $(LIST) $(MEMORY) $(PRINTF) $(PUT) $(STRING))

OBJ_DIR = obj

OBJECTS	:= $(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRC))

ASCII = ft_isalnum.c		\
		ft_isalpha.c		\
		ft_isascii.c		\
		ft_isdigit.c		\
		ft_isprint.c		

CONVERT = ft_atoi.c			\
			ft_itoa.c		\
			ft_tolower.c	\
			ft_toupper.c	

FREE =	

GNL = 

LIST = ft_lstnew.c \
		ft_lstadd_front.c \
		ft_lstsize.c \
		ft_lstlast.c \
		ft_lstadd_back.c \
		ft_lstdelone.c \
		ft_lstclear.c \
		ft_lstiter.c \
		ft_lstmap.c

MEMORY = ft_bzero.c \
			ft_calloc.c \
			ft_memset.c \
			ft_memcpy.c \
			ft_memmove.c \
			ft_memchr.c \
			ft_memcmp.c \

PRINTF = 

PUT = ft_putchar_fd.c \
		ft_putstr_fd.c \
		ft_putendl_fd.c \
		ft_putnbr_fd.c

STRING = ft_strlen.c \
		ft_strlcpy.c \
		ft_strlcat.c \
		ft_strchr.c \
		ft_strrchr.c \
		ft_strncmp.c \
		ft_strnstr.c \
		ft_strdup.c \
		ft_substr.c \
		ft_strjoin.c \
		ft_strtrim.c \
		ft_split.c \
		ft_strmapi.c \
		ft_striteri.c \

# ==================== RULES ====================

all: $(NAME)

$(NAME): $(OBJECTS) $(HEADER)
	@ar rcs $(NAME) $(OBJECTS)

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(@D)
	@printf "Building $@\n"
	@$(CC) $(FLAGS) -c $< -o $@

clean:
	@rm -rf $(OBJ_DIR)

fclean: clean
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re

